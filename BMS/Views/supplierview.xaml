    				</DataTemplate>
    			</ListBox.ItemTemplate>
    		</ListBox>
    		<ListBox x:Name="lst_cr" Width="349.5" Height="406.5" Canvas.Left="402" Canvas.Top="174.667" FontFamily="Rockwell" FontSize="14.667">
